<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="center" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">

    <BorderPane>
        <top>
            <Button onAction="#dodajZbroje"> Edytuj zbroje </Button>
        </top>

        <right>
            <VBox fx:id="rightPanel">

            </VBox>
        </right>

        <left>
            <VBox style="-fx-border-style: solid;-fx-border-radius: 5">
                <TextField fx:id="input"> </TextField>
                <TextField fx:id="output"> </TextField>
            </VBox>
        </left>

        <bottom>
            <HBox fx:id="dolnybox" style="-fx-border-style: solid">
                <Button onAction="#addButtonWithText"> Add button </Button>
                <Button onAction="#actionAddComponent"> Add component </Button>
            </HBox>
        </bottom>
    </BorderPane>

</VBox>
